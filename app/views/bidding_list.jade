header.header(style = "background-image:-webkit-gradient(linear, 0 0, 0 100%, color-stop(0, #0079c8), color-stop(1, #0067b6))")
    竞价列表
    button.header-right.btn.btn-4.btn-primary(ng-click = "start()" ng-disabled = "!status")开始
    button.header-left.btn.btn-4.btn-primary(ng-click = "back_to_activity_list()")返回

#wrapper.wrapper.scrollable
    ul.list-style-2
        li(ng-repeat="bid in bidList")
            a(href = "#/bidding_sign_up" ng-click = 'go_to_bidding_sign_up()' style="text-align: center")
                h2{{bidList.bid}}

ul.footer-nav.footer-nav-2tabs.footer(style = "background-image:-webkit-gradient(linear, 0 0, 0 100%, color-stop(0, #3d3d3d), color-stop(1, #272727)); margin-bottom: 0px;")
    li
        a(href = "#/create_sign_up" ng-click="sign_up()" style="font-size: 30px;padding-top: 30px;padding-bottom: 30px;")
            报名
    li
        a(href = "" ng-click="bidding()" style="font-size: 30px;padding-top: 30px;padding-bottom: 30px;")
            竞价